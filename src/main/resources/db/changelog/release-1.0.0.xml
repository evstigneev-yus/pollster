<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
    <changeSet author="yuri" id="1">
        <createTable tableName="poll">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="created" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="updated" type="DATETIME"/>
            <column name="version" type="BIGINT"/>
            <column name="chat_link" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="end_message" type="VARCHAR(250)"/>
            <column name="start_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="time_to_live" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="repeat_schedule" type="VARCHAR(50)"/>
            <column name="question" type="VARCHAR(250)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="yuri" id="2">
        <createTable tableName="answer">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="created" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="updated" type="DATETIME"/>
            <column name="version" type="BIGINT"/>
            <column name="poll" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="text" type="VARCHAR(250)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="yuri" id="3">
        <addForeignKeyConstraint baseColumnNames="poll"
                                 baseTableName="answer"
                                 constraintName="answer.poll-fk"
                                 deferrable="false" initiallyDeferred="false"
                                 onDelete="CASCADE" onUpdate="NO ACTION"
                                 referencedColumnNames="id"
                                 referencedTableName="poll"/>
    </changeSet>
    <changeSet author="yuri" id="4">
        <sql>
            ALTER
            DATABASE pollster CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;
        </sql>
        <sql>
            ALTER TABLE poll CONVERT TO CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;
        </sql>
        <sql>
            ALTER TABLE poll MODIFY COLUMN question VARCHAR (250) CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;
        </sql>
        <sql>
            ALTER TABLE answer CONVERT TO CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;
        </sql>
        <sql>
            ALTER TABLE answer MODIFY COLUMN text VARCHAR (250) CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;
        </sql>
    </changeSet>
</databaseChangeLog>
